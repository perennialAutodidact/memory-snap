{
  "name": "memory-snap-workspace",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  },
  "type": "module",
  "scripts": {
    "build": "npx nx run-many --target=build",
    "ci": "npx nx run-many --target=ci",
    "lint": "npx nx run-many --target=lint",
    "serve": "GENERATE_SOURCEMAP=false yarn run nx run-many --target=serve",
    "start": "npx nx run-many --target=start",
    "test": "npx nx run-many --target=test",
    "prepare": "husky install && chmod ug+x .husky/*"
  },
  "dependencies": {},
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^15.0.2",
    "nx": "17.1.3",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.0.0"
  },
  "version": "1.0.1",
  "description": "Memory Snap monorepo",
  "repository": "git@github.com:perennialAutodidact/memory-snap.git",
  "author": "Keegan Good <perennialautodidact@gmail.com>",
  "license": "MIT"
}
