{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cachableOperations": ["build", "lint", "ci", "test"],
        "cacheDirectory": "./nx/cache"
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "serve": {
      "dependsOn": ["^serve"]
    },
    "start": {
      "dependsOn": ["^start"],
      "cache": true
    },
    "lint": {
      "cache": true,
      "esLintConfig": "./.eslintrc.json",
      "inputs": ["{projectRoot}/**/*"]
    },
    "test": {
      "cache": true,
      "executor": "@nx/jest:jest",
      "inputs": ["{projectRoot}/**/*"]
    },
    "ci": {
      "cache": true,
      "executor": "@nx/jest:jest",
      "inputs": ["{projectRoot}/**/*"]
    }
  },
  "affected": {
    "defaultBase": "main"
  }
}
