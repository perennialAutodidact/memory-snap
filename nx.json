{
  "workspaceLayout": {
    "appsDir": "./packages/*",
    "libsDir": "./packages/*"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build"],
        "parallel": 2
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        {
          "projects": "dependencies",
          "target": "install",
          "params": "forward"
        },
        "^build"
      ]
    }
  }
}
